<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_layout_padding"
        android:orientation="vertical"
        android:padding="@dimen/main_layout_padding">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_style"
            android:padding="@dimen/layoutContentPadding"
            android:paddingBottom="@dimen/main_layout_padding"
            android:textColor="@color/black"
            android:textColorHint="@color/black">

            <EditText
                android:id="@+id/etDirName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:hint="Directory Name"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/textSizeInButton" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnBack"
            style="@style/button_alert_box"
            android:layout_weight=".5"
            android:text="BACK" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e9e9e9" />

        <Button
            android:id="@+id/btnSave"
            style="@style/button_alert_box"
            android:layout_weight=".5"
            android:text="SAVE" />


    </LinearLayout>

</LinearLayout>